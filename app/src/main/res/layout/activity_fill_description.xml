<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.test.hello.myhelloworld.FillDescriptionActivity">

    <TextView android:text="Address" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/textView"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:textSize="30px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtGarbageAdd"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/textView2"
        android:layout_marginTop="23dp"
        android:textStyle="bold"
        android:textSize="30px"
        android:textColor="#ff000000"
        android:layout_below="@+id/edtGarbageAdd"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edtGarbageDesp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attachment(s)"
        android:id="@+id/textView3"
        android:layout_below="@+id/edtGarbageDesp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="26dp"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:textSize="30px" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="120px"
        android:text="Submit Request"
        android:id="@+id/btnSubmit"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:textSize="35px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickSubmitRequest"
        android:layout_marginBottom="10px" />

    <ImageView
        android:layout_width="180px"
        android:layout_height="180px"
        android:id="@+id/imgView01"
        android:src="@drawable/ic"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="20dp"
        android:onClick="onClickImg" />

    <ImageView
        android:layout_width="180px"
        android:layout_height="180px"
        android:id="@+id/imgView02"
        android:src="@drawable/ic"
        android:layout_alignTop="@+id/imgView01"
        android:layout_alignRight="@+id/edtGarbageDesp"
        android:layout_alignEnd="@+id/edtGarbageDesp"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="43dp"
        android:onClick="onClickImg" />

</RelativeLayout>
